@{
    ViewData["Title"] = "Inicio de sesión";
}

<h3>Inicio de sesión</h3>
<div class="row">
    <div class="row">
        <div class="col s6 offset-s3">
            <div class="row">
                <div class="input-field col s12">
                    <input type="email" id="email" class="validate" />
                    <label for="email">Correo</label>
                    <span class="helper-text"></span>
                </div>
                <div class="input-field col s12">
                    <input type="password" id="password" class="validate" />
                    <label for="password">Contraseña</label>
                    <span class="helper-text"></span>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" class="hide" id="GoogleReCaptchaResponse" />
    <div class="row">
        <div class="col s12 center">
            <button id="login" class="btn-small teal darken-1">Iniciar sesión</button>
            <button id="register" class="btn-small red accent-2">Registrar</button>
        </div>
        <div class="col s12 center">
            <a id="forgot" class="link text-small">¿Olvidó su contraseña?</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/squeeby.email.js"></script>
    <script src="~/js/Account/login.js"></script>
}