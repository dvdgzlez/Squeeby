@{
    ViewData["Title"] = "Registrar";
}

<h3>Registrar nuevo usuario</h3>
<div class="row">
    <div class="row">
        <div class="input-field col s12 m6">
            <input type="text" id="name" class="validate" />
            <label for="name">Nombre</label>
            <span class="helper-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <input type="text" id="lastName" class="validate" />
            <label for="lastName">Apellidos</label>
            <span class="helper-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <input type="text" id="birthday" class="datepicker validate" />
            <label for="birthday">Fecha de nacimiento</label>
            <span class="helper-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <input type="email" id="email" class="validate" />
            <label for="email">Correo</label>
            <span class="helper-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <input type="password" id="password" class="validate" />
            <label for="password">Contraseña</label>
            <span class="helper-text"></span>
        </div>
        <div class="input-field col s12 m6">
            <input type="password" id="confirmPassword" class="validate" />
            <label for="confirmPassword">Confirme contraseña</label>
            <span class="helper-text"></span>
        </div>
    </div>
    <input type="hidden" class="hide" id="GoogleReCaptchaResponse" />
    <div class="row">
        <div class="col s12 center">
            <button id="confirm" class="btn-small teal darken-1">Crear</button>
            <button id="cancel" class="btn-small red accent-2">Cancelar</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/squeeby.email.js"></script>
    <script src="~/js/squeeby.password.js"></script>
    <script src="~/js/Account/register.js?v=1"></script>
}